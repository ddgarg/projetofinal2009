<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">


	<url-mapping id="url-seo">
		<pattern value="/url-padra-seo.xhtml" />
		<view-id value="/index.jsp" />
	</url-mapping>

	<url-mapping id="url-index">
		<pattern value="/"></pattern>
		<view-id value="/pages/home.jsf" />
	</url-mapping>

	<url-mapping id="url-home">
		<pattern value="/home"></pattern>
		<view-id value="/pages/home.jsf" />
	</url-mapping>

	<url-mapping id="url-lista-categorias">
		<pattern value="/categorias"></pattern>
		<view-id value="/pages/listarCategorias.jsf" />
	</url-mapping>

	<url-mapping id="url-lista-produtos">
		<pattern value="/produtos"></pattern>
		<view-id value="/pages/listarProdutos.jsf" />
	</url-mapping>

	<url-mapping id="url-new-categoria">
		<pattern value="/categoria/new"></pattern>
		<view-id value="/pages/categoria.jsf" />
	</url-mapping>
	
	<url-mapping id="url-new-produto">
		<pattern value="/produto/new"></pattern>
		<view-id value="/pages/produto.jsf" />
	</url-mapping>




	<url-mapping parentId="url-home" id="ELinjectedPathParameters">
		<pattern value="/#{homeBean.param}"></pattern>
		<view-id value="/pages/home.xhtml" />
		<action onPostback="false">#{homeBean.metodo()}</action>
	</url-mapping>

	<url-mapping id="viewItem" onPostback="false">
		<pattern value="/store/item/#{iid : homeBean.itemId}" />
		<view-id value="/pages/itens.xhtml" />
		<action>#{homeBean.loadItem}</action>
	</url-mapping>

	<url-mapping id="store">
		<pattern value="/home" />
		<view-id value="/pages/home.xhtml" />
		<query-param name="param">#{homeBean.param}</query-param>
	</url-mapping>

</pretty-config>